<UserControl x:Class="Chess.NET.Controls.MoveNotationDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.NET.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="140">
    <Grid>
        <Grid.Resources>
            <local:MoveToImageConverter x:Key="moveToImageConverter" />
            <local:MoveToTextConverter x:Key="noveToTextConverter" />
            <local:MoveCountConverter x:Key="moveCountConverter" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="PanelBegin" Visibility="Collapsed" Background="Transparent" MouseDown="PanelBegin_MouseDown" Grid.Column="0" Grid.ColumnSpan="2" Cursor="Hand" Orientation="Horizontal">
            <TextBlock Text="0. Begin Position" VerticalAlignment="Center" Margin="2" FontSize="14" />
        </StackPanel>
        
        <StackPanel x:Name="PanelMove1" Background="Transparent" MouseDown="PanelMove1_MouseDown" Cursor="Hand" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center" Margin="2" FontSize="14">
                <Run Text="{Binding Count, Converter={StaticResource moveCountConverter}}" /><Run Text=". " />
            </TextBlock>
            <Image Source="{Binding ., Converter={StaticResource moveToImageConverter}}" Width="16" Height="16" RenderOptions.BitmapScalingMode="Fant" />
            <TextBlock Text="{Binding ., Converter={StaticResource noveToTextConverter}}" VerticalAlignment="Center" Margin="2" FontSize="14" />
        </StackPanel>

        <StackPanel x:Name="PanelMove2" Background="Transparent" MouseDown="PanelMove2_MouseDown" Grid.Column="1" Cursor="Hand" Margin="5,0,0,0" Orientation="Horizontal" VerticalAlignment="Center">
            <Image Source="{Binding ., Converter={StaticResource moveToImageConverter}}" Width="16" Height="16" RenderOptions.BitmapScalingMode="Fant" />
            <TextBlock Text="{Binding ., Converter={StaticResource noveToTextConverter}}" VerticalAlignment="Center" Margin="2" FontSize="14" />
        </StackPanel>
    </Grid>
</UserControl>
