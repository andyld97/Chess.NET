<UserControl x:Class="Chess.NET.Controls.ChessBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.NET.Controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="ChessLightSquare" Color="White"/>
        <LinearGradientBrush x:Key="ChessDarkSquare"
                     StartPoint="0,0"
                     EndPoint="0,1">
            <GradientStop Color="#FF3A6EA5" Offset="0.0"/>
            <GradientStop Color="#FF2F5F8F" Offset="1.0"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    <Border Width="1000" Height="1000" BorderThickness="3" BorderBrush="LightGray">
        <Grid>
            <Grid x:Name="BoardGrid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Canvas x:Name="DragCanvas" IsHitTestVisible="False">
                <Image x:Name="DraggedImage" Visibility="Hidden" RenderOptions.BitmapScalingMode="Fant" />
            </Canvas>
        </Grid>
    </Border>
</UserControl>