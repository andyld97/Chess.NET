<Window x:Class="Chess.NET.Controls.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.NET.Controls.Dialogs"
        xmlns:res="clr-namespace:Chess.NET.Properties"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Title="{x:Static res:Resources.strAbout}" Width="300" SizeToContent="Height">
    <Grid Margin="5,5,5,20">
        <StackPanel>
            <Image Source="../../resources/images/logo.png" Width="200" Margin="0,15,0,0"/>

            <TextBlock Margin="5,10,0,0" Padding="0,0,0,10" HorizontalAlignment="Center">
                <Run x:Name="TextCopyright" Text="@copy 2026" FontWeight="Bold" />
                <LineBreak />
                <Run Text="{x:Static res:Resources.strAboutLine1}" />
                
                <LineBreak />
                <LineBreak />
                
                <Hyperlink x:Name="LnkHomepage" Click="LnkHomepage_Click" NavigateUri="https://ca-soft.net">
                    <TextBlock Text="Homepage" />
                </Hyperlink>
               
                <LineBreak />
                <LineBreak />
                
                <Run x:Name="TextVersion" Text="Version 1.0.0" FontWeight="Bold" />
                <LineBreak />
                <Run x:Name="TextService" Text="Powered by .NET 10.0.2" />
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
