<Window x:Class="Chess.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.NET"
        xmlns:controls="clr-namespace:Chess.NET.Controls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Chess.NET" Height="768" Width="1024">
    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding MoveLeftCommand}" />
        <KeyBinding Key="Right" Command="{Binding MoveRightCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0 0 0 0.5" Background="#FFF3F1F1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Margin="2" Padding="3">
                        <Run x:Name="TextPlayerTopName" Text="Player 2" FontWeight="Bold" />
                        <LineBreak />
                        <Run x:Name="TextPlayerTopElo" Text="Elo: ???" />
                    </TextBlock>
                </StackPanel>

                <TextBlock Margin="5,2,0,0" Padding="3" x:Name="TextPlayerInfoTop" Grid.Column="1" />
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="WhiteSmoke">
            <Grid IsHitTestVisible="False">
                <Image Source="/resources/images/background.jpg" Stretch="UniformToFill" />
            </Grid>
            <Viewbox Margin="10">
                <controls:ChessBoard x:Name="Chessboard" />
            </Viewbox>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Moves:" FontWeight="Bold" />
                    <ListBox x:Name="ListMoves" MouseDoubleClick="ListMoves_MouseDoubleClick" Margin="0,4,0,0" Grid.Row="1" />
                    
                    <StackPanel Grid.Row="2" Margin="0,5,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ButtonJumpToStart" Click="ButtonJumpToStart_Click" Content="⏮" FontWeight="Bold" Padding="3" Width="30" Margin="0,2,5,2" />
                        <Button x:Name="ButtonJumpToPreviousMove" Click="ButtonJumpToPreviousMove_Click" Content="◀" FontWeight="Bold" Padding="3" Height="30" Width="30" Margin="0,2,5,2" />
                        <Button x:Name="ButtonJumpToNextMove" Click="ButtonJumpToNextMove_Click" Content="▶" FontWeight="Bold" Padding="3" Width="30" Margin="0,2,5,2" />
                        <Button x:Name="ButtonJumpToLastMove" Click="ButtonJumpToLastMove_Click" Content="⏭" FontWeight="Bold" Padding="3" Width="30" Margin="0,2,5,2"/>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="4" Grid.Row="1">
                    <TextBlock Text="Opponent:" Margin="2,2,2,0" />
                    <ComboBox x:Name="CmbOpponent" Padding="5" Margin="0,2,0,5" SelectedIndex="0">
                        <ComboBoxItem>Stockfish (Bot)</ComboBoxItem>
                        <ComboBoxItem>Stupido (Bot)</ComboBoxItem>
                        <ComboBoxItem>None</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="ButtonRestart" Click="ButtonRestart_Click" Content="New Game" Padding="3" Margin="0" FontWeight="Bold" />
                    <Button x:Name="ButtonMirror" Content="Mirror Board" Click="ButtonMirror_Click" Padding="3" Margin="0,5,0,0" />
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0 0.5 0 0" Background="#FFF3F1F1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Margin="2" Padding="3">
                      <Run x:Name="TextPlayerBottomName" Text="Player 1" FontWeight="Bold" />
                      <LineBreak />
                      <Run x:Name="TextPlayerBottomElo" Text="Elo: ???" />
                    </TextBlock>
                </StackPanel>

                <TextBlock Margin="5,2,0,0" Padding="3" x:Name="TextPlayerInfoBottom" Grid.Column="1" />
            </Grid>
        </Border>
    </Grid>
</Window>