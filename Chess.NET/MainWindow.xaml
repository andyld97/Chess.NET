<Window x:Class="Chess.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.NET"
        xmlns:controls="clr-namespace:Chess.NET.Controls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Chess.NET" Height="768" Width="1024">
    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding MoveLeftCommand}" />
        <KeyBinding Key="Right" Command="{Binding MoveRightCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0 0 0 0.5" Background="#FFF3F1F1">
            <Grid>
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Margin="2" Padding="3">
                        <Run Text="Stockfish (Bot)" FontWeight="Bold" />
                        <LineBreak />
                        <Run Text="Elo: 9999" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="WhiteSmoke">
            <Grid IsHitTestVisible="False">
                <Image Source="/resources/images/background.jpg" Stretch="UniformToFill" />
            </Grid>
            <Viewbox Margin="10">
                <controls:ChessBoard x:Name="Chessboard" />
            </Viewbox>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Moves:" FontWeight="Bold" />
                    <ListBox x:Name="ListMoves" Margin="0,4,0,0" Grid.Row="1" />
                </Grid>

                <StackPanel Margin="4" Grid.Row="1">
                    <Button x:Name="ButtonRestart" Click="ButtonRestart_Click" Content="Restart Game" Padding="3" Margin="0" FontWeight="Bold" />
                    <Button x:Name="ButtonMirror" Content="Mirror Board" Click="ButtonMirror_Click" Padding="3" Margin="0,5,0,0" />
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0 0.5 0 0" Background="#FFF3F1F1">
            <Grid>
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Margin="2" Padding="3">
                      <Run Text="Player 1" FontWeight="Bold" />
                      <LineBreak />
                      <Run Text="Elo: ???" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>